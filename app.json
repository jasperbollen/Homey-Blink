{
  "$schema": "https://raw.githubusercontent.com/tmsns/homey-json-schema/master/schema.json",
  "id": "com.jasperbollen.homey-blink",
  "sdk": 2,
  "name": {
    "en": "Blink Camera's",
    "nl": "Blink Camera's"
  },
  "description": {
    "en": "Blink",
    "nl": "Blink"
  },
  "tags":{
    "en": ["Blink","Camera","Secutiy"],
    "nl": ["Blink","Camera","Secutiy"]
  },
  "images":{
    "large":"/assets/images/large.jpg",
    "small":"/assets/images/small.jpg"
  },
  "category": ["security"],
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Jasper Bollen",
    "email": "jasperbollen@gmail.com"
  },
  "contributing":{
    "donate":{
      "paypal":{
        "username": "jasperbollen"
      }
    }
  },
  "capabilities": {
    "wifi_signal": {
      "type": "string",
      "title": {
        "en": "Wifi Signal",
        "nl": "Wifi Signaal"
      },
      "getable": true,
      "setable": false
    },
    "clip_length": {
      "type": "number",
      "title": {
        "en": "Clip length",
        "nl": "Clip lengte"
      },
      "getable": true,
      "setable": false
    },
    "last_vid": {
      "type": "number",
      "title": {
        "en": "Last video date",
        "nl": "Laatste video datum"
      },
      "getable": true,
      "setable": false
    },
    "battery_state": {
      "type": "string",
      "title": {
        "en": "Battery state",
        "nl": "Batterij status"
      },
      "getable": true,
      "setable": false
    }
  },
  "drivers": [
    {
      "id": "BlinkIndoorCamera",
      "class": "sensor",
      "capabilities": [ "onoff", "wifi_signal", "battery_state", "clip_length", "last_vid", "measure_temperature" ],
      "name": {
        "en": "Blink indoor camera",
        "nl": "Blink indoor camera"
      },
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [ "onoff" ]
          },
          {
            "id": "sensor",
            "capabilities": [ "measure_temperature", "wifi_signal", "battery_state", "clip_length" ],
            "options": {
              "icons": {
                "wifi_signal": "/drivers/BlinkIndoorCamera/assets/images/wifi_signal.svg",
                "battery_state": "/drivers/BlinkIndoorCamera/assets/images/battery_state.svg",
                "clip_length": "/drivers/BlinkIndoorCamera/assets/images/clip_length.svg"
              }
            }
          }

        ]
      },
      "images": {
        "large": "/drivers/BlinkIndoorCamera/assets/images/large.png",
        "small": "/drivers/BlinkIndoorCamera/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": { "next": "add_devices" }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "motion_trigger",
        "title": {
          "en": "Motion detected",
          "nl": "Beweging gedetecteerd"
        },
        "args": [
          {
            "name": "IndoorCamera",
            "type": "device",
            "filter": "driver_id=BlinkIndoorCamera"
          }
        ]
      },
      {
        "id": "snapshot_created",
        "title": {
          "en": "A snapshot was created",
          "nl": "Er is een snapshot gemaakt"
        },
        "tokens":[
          {
            "name": "image",
            "title": {
              "en": "image"
            },
            "type": "image"
          },
          {
            "name": "device",
            "title": {
              "en": "Device"
            }
          }
        ],
        "args": [
          {
            "name": "IndoorCamera",
            "type": "device",
            "filter": "driver_id=BlinkIndoorCamera"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "turn_on",
        "title": {
          "en": "Enable motion",
          "nl": "Bewegingsdetectie aanzetten"
        },
        "args": [
          {
            "name": "IndoorCamera_on",
            "type": "device",
            "filter": "driver_id=BlinkIndoorCamera"
          }
        ]
      },
      {
        "id": "turn_off",
        "title": {
          "en": "Disable motion",
          "nl": "Bewegingsdetectie uitzetten"
        },
        "args": [
          {
            "name": "IndoorCamera_off",
            "type": "device",
            "filter": "driver_id=BlinkIndoorCamera"
          }
        ]
      },
      {
        "id": "Capture_video",
        "title": {
          "en": "Capture video",
          "nl": "Video maken"
        },
        "args": [
          {
            "name": "Capture_vid",
            "type": "device",
            "filter": "driver_id=BlinkIndoorCamera"
          }
        ]
      },
      {
        "id": "Capture_snapshot",
        "title": {
          "en": "Capture snapshot",
          "nl": "Snapshot maken"
        },
        "args": [
          {
            "name": "Capture_snap",
            "type": "device",
            "filter": "driver_id=BlinkIndoorCamera"
          }
        ]
      },
      {
        "id": "arm_network",
        "title": {
          "en": "Arm network",
          "nl": "Beveiliging aanzetten"
        }
      },
      {
        "id": "disarm_network",
        "title": {
          "en": "Disarm network",
          "nl": "Beveiliging uitzetten"
        }
      }
    ]
  }
  }
